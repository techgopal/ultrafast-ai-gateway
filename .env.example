# Ultrafast Gateway Environment Variables
# Copy this file to .env and set your actual values

# Server Configuration
GATEWAY_HOST=127.0.0.1
GATEWAY_PORT=3000
GATEWAY_TIMEOUT=30s
GATEWAY_LOG_LEVEL=info

# Provider API Keys - Set only the providers you want to use
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
GOOGLE_VERTEX_AI_API_KEY=your-google-vertex-ai-api-key-here
COHERE_API_KEY=your-cohere-api-key-here
GROQ_API_KEY=your-groq-api-key-here
MISTRAL_API_KEY=your-mistral-api-key-here
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# Gateway Authentication
GATEWAY_AUTH_ENABLED=true
GATEWAY_API_KEYS='[{"key":"sk-ultrafast-gateway-key-12345","name":"default","enabled":true,"rate_limit":{"requests_per_minute":100,"requests_per_hour":1000,"tokens_per_minute":10000},"metadata":{"client":"default"}}]'

# Cache Configuration
GATEWAY_CACHE_BACKEND=memory
GATEWAY_REDIS_URL=redis://localhost:6379

# Security Note: 
# - Never commit the actual .env file to version control
# - Use strong, unique API keys for production
# - Rotate keys regularly
# - Consider using a secrets management service in production